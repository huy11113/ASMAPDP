@model List<ASMAPDP.Models.Class>

@{
    ViewData["Title"] = "Quản lý lớp học";
}

<h2>Quản lý lớp học</h2>

<p>
    <a asp-action="Add" asp-controller="Classes">Thêm lớp học mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên lớp</th>
            <th>Thời khóa biểu</th>
            <th>Hành động</th>
            <th>Nhập điểm</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ClassName</td>
                <td>@item.Schedule</td>
                <td>
                    <form asp-action="Delete" asp-controller="Classes" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa lớp này?');">Xóa</button>
                    </form>
                </td>
                <td>
                    <a asp-action="EnterGrades" asp-controller="Grades" asp-route-classId="@item.Id">Nhập điểm</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Teacher" asp-action="Dashboard">Quay lại Dashboard</a>